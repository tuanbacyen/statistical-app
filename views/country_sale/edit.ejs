<div class="col-md-4 offset-md-4 form-new">
  <h3>New Country-Sale Check</h3>
  <form action="/country_sale/update" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="<%= country_sale._id %>">
    <div class="form-group">
      <label>Country</label>
      <input type="text" class="form-control" name="country" placeholder="country" value="<%= country_sale.country %>"
        required />
    </div>
    <hr>
    <div class="form-group">
      <label>Sale code</label>
      <input type="text" class="form-control" name="sale_code" placeholder="Sale code"
        value="<%= country_sale.sale_code %>" required />
    </div>
    <div class="form-group">
      <a class="btn btn-secondary" href="/country_sale"><i class="fa fa-arrow-circle-left"></i>Back</a>
      <button type="submit" class="btn btn-success float-right"><i class="fa fa-database"></i> Submit</button>
    </div>
  </form>
</div>
