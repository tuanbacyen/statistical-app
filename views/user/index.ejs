<div class="col-md-6 offset-md-3">
  <h3>COUNTRY-SALE -> COUNT: <%= list.length %></h3>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr class="d-flex">
        <th class="col-5">Username</th>
        <th class="col-5">Role</th>
        <th class="col-2 text-center">
          <% if(current_user.role == 'admin') { %>
          <a class="btn btn-success" href="/user/new"><i class="fa fa-plus"></i></a>
          <% } %>
      </tr>
    </thead>
    <tbody>
      <% list.forEach((user) => { %>
      <br>
      <tr class="d-flex">
        <td class="col-5"><%= user.username %></td>
        <td class="col-5"><%= user.role %></td>
        <td class="col-2 text-center">
          <% if(current_user.role == 'admin' && user.role != 'admin') { %>
          <a href="/user/edit/<%= user._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
          <a href="/user/delete/<%= user._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i
              class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
          <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
